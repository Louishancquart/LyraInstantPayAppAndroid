<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/screen"
        android:orientation="vertical"
        tools:context="com.lyranetwork.demo.payapp.Activity.MainActivity">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/header" />

            <ImageButton
                android:id="@+id/imageButtonLangCredentials"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="right"
                android:background="@drawable/unitedkingdom"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/unitedkingdom" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="239dp">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:background="@android:color/background_light"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2Credentials"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/shop" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/editTextShopID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/bluelyra"
                        android:ems="10"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:textColor="@color/bluelyradark2"
                        android:textCursorDrawable="@null"
                        android:visibility="visible"
                        tools:text="Your Shop ID" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:background="@android:color/background_light"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/key" />

                <EditText
                    android:id="@+id/editTextCertificate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/bluelyra"
                    android:ems="10"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:textColor="@color/bluelyradark2"
                    android:textCursorDrawable="@null"
                    android:visibility="visible"
                    tools:text="Your Certificate" />

            </LinearLayout>

            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@android:color/background_light"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:text="@string/login"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/bluelyradark2"
                android:textSize="24sp" />

            <LinearLayout
                android:id="@+id/switchLayoutCredentials"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <!--
                <ToggleButton
                    android:id="@+id/toggleButtonModeTest"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/togglebackground"
                    android:clickable="false"
                    android:text="@string/test"
                    android:textColor="@color/bluelyradark2"
                    android:textOff="@string/test"
                    android:textOn="@string/test" />

                <ToggleButton
                    android:id="@+id/toggleButtonModeProduction"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/togglebackground"
                    android:clickable="false"
                    android:text="@string/production"
                    android:textColor="@color/bluelyradark2"
                    android:textOff="@string/production"
                    android:textOn="@string/production" />
                    -->
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textViewPoweredByCredentials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center"
            android:text="@string/powered_by_lyra"
            android:textColor="@android:color/background_light" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/loadingPanelCredentials"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55FFFFFF"
        android:visibility="gone"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/progressBarCredentials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </RelativeLayout>
</FrameLayout>