<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="1000dp"
    android:background="@color/bluelyradark2"
    android:fillViewport="false">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/screen"
        android:gravity="center_horizontal"
        android:isScrollContainer="true"
        android:orientation="vertical"
        tools:context="com.lyranetwork.demo.payapp.Activity.MainActivity">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/payzen_logo"
                app:srcCompat="@drawable/header" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/orderIDTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="@string/orderID"
                    android:textColor="@color/bluelyramorewhite" />

                <TextView
                    android:id="@+id/amountTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="@string/amount"
                    android:textColor="@color/bluelyramorewhite" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/orderIDTextView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="@string/orderID"
                    android:textColor="@color/bluelyramorewhite" />

                <TextView
                    android:id="@+id/amountTextView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="@string/amount"
                    android:textColor="@color/bluelyramorewhite" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="239dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="5dp">

                <Button
                    android:id="@+id/buttonShareLink"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:contentDescription="@string/payment_share_link"
                    android:text="@string/payment_share_link"
                    android:textColor="@color/bluelyra"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">

                <TextView
                    android:id="@+id/titleQRTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/scan_or_share"
                    android:textColor="@color/white"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/imageViewQRCode"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:contentDescription="@string/qr_code_image"
                    android:cropToPadding="false"
                    android:padding="0dp"
                    app:srcCompat="@color/white" />

                <!--
                <TextView
                    android:id="@+id/textViewErrorOccured"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="@string/finddetails"
                    android:textColor="@color/bluelyra"
                    android:textSize="18sp" />
                 -->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/statusLayout"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingRight="0dp">

                <Button
                    android:id="@+id/buttonCheckStatus"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/check_status"
                    android:paddingLeft="40dp"
                    android:text="@string/check_status"
                    android:textColor="@color/bluelyra"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/satusImageView"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal|center"
                    android:backgroundTint="@android:color/transparent"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/pending" />
            </LinearLayout>

            <!--<Button-->
            <!--android:id="@+id/buttonCheckStatus"-->
            <!--android:layout_width="300dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginTop="100dp"-->
            <!--android:background="@color/bluelyra"-->
            <!--android:contentDescription="@string/check_status"-->
            <!--android:text="@string/check_status"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="18sp"-->
            <!--app:srcCompat="@color/bluelyrawhite" />-->


        </LinearLayout>

        <TextView
            android:id="@+id/textViewPoweredByLinkReceived"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="bottom|center_horizontal"
            android:paddingTop="10dp"
            android:text="@string/powered_by_lyra"
            android:textColor="@android:color/background_light" />

    </LinearLayout>
</ScrollView>